<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Story</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-container">
            <a href="/" class="logo">StoryNest</a>
            <div class="header-right">
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>

    <!-- Create Form Container -->
    <div class="form-container">
        <h1 class="form-title">Tell your story...</h1>
        
        <form action="/blogs/new" method="post" class="blog-form">
            <div class="form-group">
                <input 
                    type="text" 
                    name="title" 
                    placeholder="Title" 
                    class="form-input form-input-title"
                    required
                >
            </div>

            <div class="form-group">
                <textarea 
                    name="content" 
                    placeholder="Tell your story..." 
                    class="form-textarea"
                    required
                ></textarea>
            </div>

            <div class="form-group">
                <label class="form-label">Author</label>
                <input 
                    type="text" 
                    name="author" 
                    placeholder="Your name" 
                    class="form-input"
                    required
                >
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-publish">Publish</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>